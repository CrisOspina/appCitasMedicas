<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".LoginActivity"
    android:background="@color/fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        >

        <Spinner
            android:id="@+id/spEps"
            android:layout_width="658dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/eps"
            app:met_floatingLabel="normal" />

        <Spinner
            android:id="@+id/spEspecialista"
            android:layout_width="658dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/especialista"
            app:met_floatingLabel="normal" />


        <TextView
            android:id="@+id/tvCorreo"
            android:layout_width="658dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/correo"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvCedula"
            android:layout_width="658dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/cedula"
            android:padding="10dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="658dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/fecha">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etFecha"
                android:layout_width="658dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:onClick="datePicker" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnAsignar"
            android:layout_width="658dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="asignar"
            android:text="@string/asignar"
            android:theme="@style/estiloBoton" />

    </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>